source 'https://rubygems.org'

gem 'rails', '3.2.7'


group :development, :test do
  gem 'sqlite3'
  gem 'rspec-rails'
end


group :assets do
  gem 'sass-rails',   '~> 3.2.3'
  gem 'coffee-rails', '~> 3.2.1'


  gem 'uglifier', '>= 1.0.3'
end

gem 'jquery-rails'

group :test do
  gem 'capybara'
  gem 'cucumber-rails', :require => false
  gem 'bcrypt-ruby'
  gem 'database_cleaner'
end

group :production do
  gem 'pg'
  gem 'bcrypt-ruby'
end
